    cursor: pointer;
    scroll-snap-align: center;
    transition: all 0.2s ease-out;
    opacity: 0.5;
}

.time-picker-item.selected {
    color: var(--text-main);
    font-weight: 600;
    font-size: 22px;
    opacity: 1;
}

